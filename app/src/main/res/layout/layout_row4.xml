<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="horizontal">

    <RelativeLayout
        android:id="@+id/ll_row_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/row4_btn_1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/key_selector"
            android:text="shift"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_1"
            android:background="@drawable/key_selector"
            android:text="Z"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_2"
            android:background="@drawable/key_selector"
            android:text="X"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_3"
            android:background="@drawable/key_selector"
            android:text="C"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/key_selector"
            android:layout_toRightOf="@+id/row4_btn_4"
            android:text="V"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/key_selector"
            android:layout_toRightOf="@+id/row4_btn_5"
            android:text="B"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_6"
            android:background="@drawable/key_selector"
            android:text="N"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_7"
            android:background="@drawable/key_selector"
            android:text="M"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_8"
            android:background="@drawable/key_selector"
            android:text="\u003C"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_9"
            android:background="@drawable/key_selector"
            android:text="\u003E"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_10"
            android:background="@drawable/key_selector"
            android:text="\u003F"
            android:textColor="@drawable/text_selector" />

        <Button
            android:id="@+id/row4_btn_12"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/row4_btn_11"
            android:background="@drawable/key_selector"
            android:text="shift"
            android:textColor="@drawable/text_selector" />

    </RelativeLayout>
</ScrollView>
